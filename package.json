{
  "name": "arcane-repo",
  "private": true,
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a",
  "engines": {
    "node": ">=25"
  },
  "workspaces": [
    "frontend",
    "tests",
    "email-templates"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm --filter arcane-frontend dev",
    "build": "pnpm --filter arcane-frontend build",
    "test": "pnpm --filter arcane-tests test",
    "format": "pnpm --filter arcane-frontend format && gofmt -w -s .",
    "check": "pnpm --filter arcane-frontend check",
    "check:ci": "pnpm --filter arcane-frontend check:ci",
    "knip": "pnpm --filter arcane-frontend knip"
  },
  "dependencies": {
    "svelte-motion": "^0.12.2"
  }
}
